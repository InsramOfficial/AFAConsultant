@page
@model AFAConsultant.Pages.Admin.JobApplications.JobApplicationDetailModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Job Application Report</title>

     
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/root_files/css/JobApplicationsDetailcss.css">
</head>
<body>
    <div class="wrapper">
        <div class="container">
            <div class="header">
                <h1>Job Application Report</h1>
            </div>

            
            <div class="image-preview">
                <img id="previewImage" src="~/images/@Model.Job.PicUrl" alt="Profile Picture">
            </div>

            
            <div class="data-section">
                <div class="row">
                    <div class="col-md-6">
                        <p class="data-label">Full Name:</p>
                        <p class="data-value">@Model.Job.FullName</p>
                    </div>
                    <div class="col-md-6">
                        <p class="data-label">Phone Number:</p>
                        <p class="data-value">@Model.Job.PhoneNumber</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <p class="data-label">Gender:</p>
                        <p class="data-value">@Model.Job.Gender</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <p class="data-label">Street Address 1:</p>
                        <p class="data-value">@Model.Job.StreetAddress1</p>
                    </div>
                    <div class="col-md-6">
                        <p class="data-label">Street Address 2:</p>
                        <p class="data-value">@Model.Job.StreetAddress2</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <p class="data-label">Country:</p>
                        <p class="data-value">@Model.Job.Country</p>
                    </div>
                    <div class="col-md-6">
                        <p class="data-label">City:</p>
                        <p class="data-value">@Model.Job.City</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <p class="data-label">Province:</p>
                        <p class="data-value">@Model.Job.Province</p>
                    </div>
                    <div class="col-md-6">
                        <p class="data-label">Postal Code:</p>
                        <p class="data-value">@Model.Job.PostalCode</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <p class="data-label">Email:</p>
                        <p class="data-value">@Model.Job.Email</p>
                    </div>
                    <div class="col-md-6">
                        <p class="data-label">Birth Date:</p>
                        <p class="data-value">@Model.Job.BirthDate</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <p class="data-label">Current Position:</p>
                        <p class="data-value">@Model.Job.CurrentPosition</p>
                    </div>
                    <div class="col-md-6">
                        <p class="data-label">Years of Experience:</p>
                        <p class="data-value">@Model.Job.YearsOfExperience</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <p class="data-label">Specialization Area:</p>
                        <p class="data-value">@Model.Job.SpecializationArea</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
