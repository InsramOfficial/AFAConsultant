@page
@model AFAConsultant.Pages.Admin.Reviews.IndexModel
@{
	ViewData["title"] = "Review/Rating - AFAC";
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>@ViewData["title"]</title>

	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" href="~/Admin_files/css/CrudTableStyleSheet.css" />
	<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</head>
<body>
	<div class="container-xl">
		<div class="table-responsive">
			<div class="table-wrapper">
				<div class="table-title">
					<div class="row">
						<div class="col-sm-6">
							<h2>Manage <b>Reviews</b></h2>
						</div>
						@* <div class="col-sm-6">
						<a asp-page="AddProfessional" class="btn btn-success"><i class="material-icons">&#xE147;</i> <span>Add New Professional</span></a>
						</div> *@
					</div>
				</div>
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th scope="col">#</th>
							<th scope="col">Name</th>
							<th scope="col">Designation</th>
							<th scope="col">Message</th>
							<th scope="col">Rating</th>
							<th scope="col">Image</th>
							<th scope="col" class="text-center">Action</th>
						</tr>
					</thead>
					<tbody>
						@{
							var i = 1;
						}
						@foreach (var review in Model.reviews)
						{
							<tr>
								<th scope="row">@i</th>
								<td>@review.Name</td>
								<td>@review.Designation</td>
								<td>@review.Message</td>
								<td>@review.Rating</td>
								<td>
									<img src="~/images/@review.PicUrl" alt="Review Image" style="max-width: 100px; max-height: 50px;" />
								</td>
								<td>
									<a asp-page-handler="Delete" asp-route-id="@review.Id" class="delete"><i class="material-icons" title="Delete">&#xE872;</i></a>
								</td>
							</tr>
							i++;
						}
					</tbody>
				</table>

			</div>
		</div>
	</div>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>