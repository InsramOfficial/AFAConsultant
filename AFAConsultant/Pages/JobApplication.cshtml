@page
@model AFAConsultant.Pages.JobApplicationModel
@{
    Layout = null;
    TempData["title"] = "Job Apply - AFAC";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Job Application - Bootstrap</title>
    <!-- Bootstrap CSS -->
    <style>
        .wrapper {
            padding: 10px 20px;
            background-color: #D3D3D3;
        }

        .container {
            background: white;
            border-radius: 10px;
        }
    </style>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="wrapper">
        <div class="container py-3">
            <h1 class="mb-4 text-center">Job Application</h1>
            <form method="post" enctype="multipart/form-data">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Job.FullName" class="form-label">Full Name <span class="text-danger">*</span></label>
                        <input asp-for="Job.FullName" class="form-control" placeholder="Enter full name"  >
                        <span asp-validation-for="Job.FullName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Job.PhoneNumber" class="form-label">Phone Number <span class="text-danger">*</span></label>
                        <input asp-for="Job.PhoneNumber" class="form-control" placeholder="Enter phone number"  >
                        <span asp-validation-for="Job.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-12">
                        <label class="form-label">Gender <span class="text-danger">*</span></label>
                        <div class="d-flex">
                            <div class="form-check me-3">
                                <input asp-for="Job.Gender" class="form-check-input" type="radio" id="male" value="Male"  >
                                <label class="form-check-label" for="male">Male</label>
                            </div>
                            <div class="form-check me-3">
                                <input asp-for="Job.Gender" class="form-check-input" type="radio" id="female" value="Female">
                                <label class="form-check-label" for="female">Female</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="Job.Gender" class="form-check-input" type="radio" id="other" value="Prefer not to say">
                                <label class="form-check-label" for="other">Prefer not to say</label>
                            </div>
                        </div>
                        <span asp-validation-for="Job.Gender" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Job.BirthDate" class="form-label">Birth Date <span class="text-danger">*</span></label>
                        <input asp-for="Job.BirthDate" class="form-control" type="date"
                               min="1900-01-01"
                               max="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="Job.BirthDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Job.Email" class="form-label">Email <span class="text-danger">*</span></label>
                        <input asp-for="Job.Email" class="form-control" placeholder="Enter email address">
                        <span asp-validation-for="Job.Email" class="text-danger"></span>
                    </div>
                </div>
                

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Job.Country" class="form-label">Country <span class="text-danger">*</span></label>
                        <input asp-for="Job.Country" class="form-control" placeholder="Enter your country"  >
                        <span asp-validation-for="Job.Country" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Job.City" class="form-label">City <span class="text-danger">*</span></label>
                        <input asp-for="Job.City" class="form-control" placeholder="Enter your city"  >
                        <span asp-validation-for="Job.City" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Job.Province" class="form-label">Province <span class="text-danger">*</span></label>
                        <input asp-for="Job.Province" class="form-control" placeholder="Enter your province"  >
                        <span asp-validation-for="Job.Province" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Job.PostalCode" class="form-label">Postal Code <span class="text-danger">*</span></label>
                        <input asp-for="Job.PostalCode" class="form-control" placeholder="Enter postal code"  >
                        <span asp-validation-for="Job.PostalCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Job.StreetAddress1" class="form-label">Street Address 1 <span class="text-danger">*</span></label>
                        <input asp-for="Job.StreetAddress1" class="form-control" placeholder="Enter street address">
                        <span asp-validation-for="Job.StreetAddress1" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Job.StreetAddress2" class="form-label">Street Address 2</label>
                        <input asp-for="Job.StreetAddress2" class="form-control" placeholder="Enter street address line 2">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Job.CurrentPosition" class="form-label">Current Position</label>
                        <input asp-for="Job.CurrentPosition" class="form-control" placeholder="Enter your current position">
                        <input type="hidden" asp-for="Job.PicUrl"  />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Job.YearsOfExperience" class="form-label">Years of Experience</label>
                        <input asp-for="Job.YearsOfExperience" class="form-control" placeholder="Enter years of experience">
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Job.SpecializationArea" class="form-label">Specialization Area</label>
                        <input asp-for="Job.SpecializationArea" class="form-control" placeholder="Enter your specialization area">
                        <span asp-validation-for="Job.SpecializationArea" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Job.Picture" class="form-label">Profile Picture <span class="text-danger">*</span></label>
                        <input asp-for="Job.Picture" class="form-control" type="file">
                        <span asp-validation-for="Job.Picture" class="text-danger"></span>
                    </div>
                </div>
                <div class="text-center  ">
                    <button asp-page="Index" class="btn btn-secondary mr-3">Back</button>
                    <button type="submit" class="btn btn-success ml-3">Submit</button>
                </div>
            </form>
        </div>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
