@page
@model AFAConsultant.Pages.SuccessModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Success - AFAC</title>
    <link href="~/Admin_files/css/ToastStyleSheet.css" rel="stylesheet">
    @await Component.InvokeAsync("Icon")
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f4f4f9;
        }
        .confirmation-container {
            text-align: center;
            background: #ffffff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .confirmation-container h1 {
            color: #4CAF50;
        }
        .confirmation-container p {
            color: #333;
        }
        .back-home {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            text-decoration: none;
            color: #ffffff;
            background-color: #4CAF50;
            border-radius: 5px;
            font-size: 16px;
            transition: background-color 0.3s;
        }
        .back-home:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <div class="confirmation-container">
        <h1>Thank You!</h1>
        <p>@TempData["success"]</p>
        <a asp-page="/Index" class="back-home">Back to Home</a>
    </div>



    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <script src="~/Admin_files/js/toast-plugin.js"></script>
    <script src="~/Admin_files/js/toast-plugin-min.js"></script>
    <script>
        $(document).ready(function () {
            console.log("Jquery is running");
            if ('@TempData["success"]' !== '') {
                $.toast({
                    title: "Success",
                    message: '@TempData["success"]',
                    type: "success",
                    duration: 5000
                });
            }


            if ('@TempData["error"]' !== '') {
                $.toast({
                    title: "Error",
                    message: '@TempData["error"]',
                    type: "error",
                    duration: 5000
                });
            }


            if ('@TempData["warning"]' !== '') {
                $.toast({
                    title: "Warning",
                    message: '@TempData["warning"]',
                    type: "warning",
                    duration: 5000
                });
            }


            if ('@TempData["info"]' !== '') {
                $.toast({
                    title: "Info",
                    message: '@TempData["info"]',
                    type: "info",
                    duration: 5000
                });
            }
        });
    </script>
</body>
</html>
