<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>AFAConsultant</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500;600;700&family=Poppins:wght@200;300;400;500;600&display=swap"
          rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/user/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/user/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">


    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/user/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/user/css/style.css" rel="stylesheet">
    @* Toast CSS *@
    <link href="~/Admin_files/css/ToastStyleSheet.css" rel="stylesheet">
</head>

<body>

    <!-- Spinner Start -->
    <div id="spinner"
         class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-secondary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>


    <!-- Navbar & Hero Start -->
    <div class="container-fluid nav-bar p-0">
        <nav class="navbar navbar-expand-lg navbar-light bg-white px-4 px-lg-5 py-3 py-lg-0">
            @await Component.InvokeAsync("Setting")
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="fa fa-bars"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto py-0">
                    <a href="index.html" class="nav-item nav-link ">Home</a>
                    <a href="#about" class="nav-item nav-link">About</a>
                    <a href="#services" class="nav-item nav-link">Countries</a>
                    <a href="#team" class="nav-item nav-link">Team</a>

                    <a href="#contact" class="nav-item nav-link">Contact</a>
                </div>

                <a asp-page="/jobapplication"
                   class="btn btn-primary border-secondary rounded-pill py-2 px-4 px-lg-3 mb-3 mb-md-3 mb-lg-0">
                    Apply
                    Now
                </a>
            </div>
        </nav>
    </div>
    <!-- Navbar & Hero End -->
    @RenderBody()
    <!-- Spinner End -->
    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/user/lib/wow/wow.min.js"></script>
    <script src="~/user/lib/easing/easing.min.js"></script>
    <script src="~/user/lib/waypoints/waypoints.min.js"></script>
    <script src="~/user/lib/counterup/counterup.min.js"></script>
    <script src="~/user/lib/owlcarousel/owl.carousel.min.js"></script>


    <!-- Template Javascript -->
    <script src="~/user/js/main.js"></script>
    @* Toast JavaScript *@
    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <script src="~/Admin_files/js/toast-plugin.js"></script>
    <script src="~/Admin_files/js/toast-plugin-min.js"></script>
    <script>
        $(document).ready(function () {
            console.log("Jquery is running");
            if ('@TempData["success"]' !== '') {
                $.toast({
                    title: "Success",
                    message: '@TempData["success"]',
                    type: "success",
                    duration: 5000
                });
            }


            if ('@TempData["error"]' !== '') {
                $.toast({
                    title: "Error",
                    message: '@TempData["error"]',
                    type: "error",
                    duration: 5000
                });
            }


            if ('@TempData["warning"]' !== '') {
                $.toast({
                    title: "Warning",
                    message: '@TempData["warning"]',
                    type: "warning",
                    duration: 5000
                });
            }


            if ('@TempData["info"]' !== '') {
                $.toast({
                    title: "Info",
                    message: '@TempData["info"]',
                    type: "info",
                    duration: 5000
                });
            }
        });
    </script>
</body>

</html>