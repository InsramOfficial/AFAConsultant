@model AFAConsultant.Pages.FeedbackModel
@{
	Layout = null;
}
<!doctype html>
<html lang="en">

<head>

    <!--    meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/icomoon-free@latest/style.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@latest/dist/css/bootstrap.min.css">
     
    <title>Review - AFAC</title>

    <link href="~/Admin_files/css/ToastStyleSheet.css" rel="stylesheet">
    <link href="~/root_files/css/ReviewPageStyleSheet.css" rel="stylesheet" />
    @await Component.InvokeAsync("Icon")
</head>

<body>


    <div class="content mt-4">
        <div class="container">
            <div class="row align-items-stretch no-gutters contact-wrap">
                <div class="col-md-12">
                    <div class="form h-100">
                        <h3>Feedback</h3>
                        <form class="mb-5" method="post"  enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6 form-group mb-3">
                                    <label asp-for="Review.Name" class="col-form-label"></label>
                                    <input asp-for="Review.Name" class="form-control" placeholder="Your name">
                                    <span asp-validation-for="Review.Name" class="text-danger"></span>

                                </div>
                                <div class="col-md-6 form-group mb-3">
                                    <label asp-for="Review.Designation" class="col-form-label">Profession</label>
                                    <input asp-for="Review.Designation" class="form-control" placeholder="Your Professional">
                                    <span asp-validation-for="Review.Designation" class="text-danger"></span>

                                </div>  
                                <div class="col-md-6 form-group mb-3">
                                    <label asp-for="Review.PicUrl" class="col-form-label">Picture</label>
                                    <input asp-for="Review.Picture" class="form-control" placeholder="Your Professional">
                                    <span asp-validation-for="Review.Picture" class="text-danger"></span>

                                </div>
                                <div class="col-md-6 form-group mb-3">
                                    <label asp-for="Review.Rating" class="col-form-label">Rating</label>
                                    <select class="form-select" asp-for="Review.Rating" aria-label="Default select example">
                                        <option selected value="0">Select Ratings</option>
                                        <option value="1">*</option>
                                        <option value="2">**</option>
                                        <option value="3">***</option>
                                        <option value="4">****</option>
                                        <option value="5">*****</option>
                                    </select>
                                    <span asp-validation-for="Review.Rating" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12 form-group mb-3">

                                    <label asp-for="Review.Message" class="col-form-label">Message *</label>
                                    <textarea asp-for="Review.Message" id="limitedTextarea" class="form-control" placeholder="Write your message"></textarea>
                                    <p id="charCount"></p>
                                    <span asp-validation-for="Review.Message" class="text-danger"></span>

                                </div>
                            </div>
                            <button class="btn btn-primary rounded-0 py-2 px-4" id="submit" type="submit">Submit</button>

                        </form>

                        <div id="form-message-warning mt-4"></div>
                        <div id="form-message-success">
                            Your message was sent, thank you!
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="popup-container">

        <div class="popup" id="popup">
            <svg xmlns="http://www.w3.org/2000/svg"
                 viewBox="0 0 512 512">
                <!--!Font Awesome Free 6.5.1 by fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2023 Fonticons, Inc.-->
                <path d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM369 209L241 337c-9.4 9.4-24.6 9.4-33.9 0l-64-64c-9.4-9.4-9.4-24.6 0-33.9s24.6-9.4 33.9 0l47 47L335 175c9.4-9.4 24.6-9.4 33.9 0s9.4 24.6 0 33.9z" />
            </svg>
            <h2><b>Thank You!</b></h2>
            <p>Your Feeback Will be very helpful</p>
            <button type="button" onclick="closepopup()">OK</button>
        </div>
    </div>


    <script>

        document.getElementById('limitedTextarea').addEventListener('input', function () {
            const maxChars = 180; // Set your desired maximum character limit here
            const textarea = this;
            const charCountElement = document.getElementById('charCount');

            // Check the length of the input value
            if (textarea.value.length > maxChars) {
                // If it exceeds, truncate the value to the maxChars limit
                textarea.value = textarea.value.substring(0, maxChars);
            }

            // Update the character count display
            charCountElement.textContent = `Characters: ${textarea.value.length}/${maxChars}`;
        });
    </script>
